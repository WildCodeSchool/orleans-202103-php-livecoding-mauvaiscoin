{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('offer') }}
{% endblock %}

{% block title %}
	{{ parent() }}
	| Détail offre
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<div class="row">
			<div class="col-8">
				<h1>{{ offer.title }}</h1>
				<div>{{ offer.createdAt|date('d/m/Y') }}</div>
			</div>
			<div class="col-4 text">
				{{ offer.price }}€
			</div>
		</div>
		<div class="row mt-5">
			<div class="pictures col-8">
				<img class="w-75" src="https://loremflickr.com/320/240"/>
			</div>
			<h2 class="Vendeur"></h2>
		</div>
		<div class="row mt-5">
			<h2>Description</h2>
			<p>{{ offer.description }}</p>
		</div>

		<p>{{ offer.description }}</p>
	</main>
{% endblock %}
